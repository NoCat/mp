<form action="@Request.Url" method="post">
    <div class="modal-body">
        <div class="bg-warning text-center text-warning"></div>
        <div class="form-group">
            <label>标题</label>
            <input  type="text" name="title" class="form-control" value="@ViewBag.Title"/>
        </div>
        <div class="form-group">
            <label>描述</label>
            <textarea name="description" class="form-control" >@ViewBag.Description</textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary">确定</button>
        <div class="btn btn-default" data-dissmiss="modal">取消</div>
    </div>
</form>