@{
    Layout = "~/Views/Shared/UserSetting.cshtml";
    ViewBag.Title = "安全设置";
}
<form class="form-horizontal" action="@Request.Url" method="post">
    <div class="form-group">
        <label class="col-md-1 control-label">原密码</label>
        <div class="col-md-5 col-md-offset-1">
            <input type="password" class="form-control" name="oPassword" required="required" placeholder="请输入原密码">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label">新密码</label>
        <div class="col-md-5 col-md-offset-1">
            <input class="form-control" type="password" name="nPassword1" placeholder="请输入新密码" required="required"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label">确认新密码</label>
        <div class="col-md-5 col-md-offset-1">
            <input class="form-control" type="password" name="nPassword2" placeholder="请再次输入新密码"  required="required"/>
        </div>
    </div>
    <button type="submit" class="col-md-1 col-md-offset-2 btn btn-primary btn-sm">保存</button>
</form>