@{
    Layout = "~/Views/Shared/UserSetting.cshtml";
    ViewBag.Title = "基本信息";
}
@model mp.DAL.User
<form class="form-horizontal" action="@Request.Url" method="post">
    <div class="form-group">
        <label class="col-md-1 control-label">注册邮箱</label>
        <div class="col-md-5 col-md-offset-1">
            <p class="form-control-static">
                @Model.Email
            </p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label">用户名</label>
        <div class="col-md-5 col-md-offset-1">
            <input class="form-control" type="text" name="username" value="@Model.Name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-1 control-label">个人描述</label>
        <div class="col-md-5 col-md-offset-1">
            <textarea class="form-control" rows="3">123123</textarea>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="col-md-1 col-md-offset-2 btn btn-primary btn-sm">保存</button>
    </div>
</form>