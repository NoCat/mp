<style>
    .navbar-default {
        height: 46px;
        background-color: white;
        box-shadow: 0 0 1px 0 #aaa;
    }

    .navbar .navbar-form {
        position: relative;
        top: 2px;
    }

    .navbar .glyphicon-search {
        left: -25px;
        top: 3px;
    }

    .navbar .avt {
        float: left;
        margin-right: 5px;
        margin-top: -5px;
        cursor: pointer;
        width: 32px;
        height: 32px;
        border-radius: 16px;
        display: inline;
    }

    .float-left {
        float: left;
    }

    .navbar .dropdown-menu .upload-btn {
        position: absolute;
        top: 0;
        left: 0;
        height: 9999px;
        width: 9999px;
        opacity: 0;
        cursor: pointer;
    }

    .navbar input[type='text'] {
        height: 30px;
    }

    .navbar .signup-btn {
        margin-left: 15px;
    }

    .navbar a:focus {
        outline: none;
    }
</style>
<nav class="navbar navbar-default">
    <div class="mp-container">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="/">首页</a>
                </li>
            </ul>
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="请输入" />
                </div>
                <a type="submit" class="glyphicon glyphicon-search icon " href="#"></a>
            </form>
            <ul class="nav navbar-nav navbar-right">
                @if (Security.IsLogin)
                {
                    var userInfo = new mp.Models.UserInfo(Security.User);
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">操作<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" style="overflow:hidden; position:relative;"><input type="file" class="upload-btn" multiple />上传图片</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a class="tool-package" href="#">创建图包</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img class="avt" src="@userInfo.Head" data-toggle="dropdown" />@userInfo.Name<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@userInfo.HomePage">个人主页</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/account/logout">退出</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="btn btn-sm btn-primary navbar-btn login-btn">登录</li>
                    <li class="btn btn-sm btn-default navbar-btn signup-btn">注册</li>
                }
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
