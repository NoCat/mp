@model IEnumerable<mp.DAL.Image>

@foreach (var image in Model)
{
    var imageInfo= mp.BLL.ImageManager.GetImageInfo(image);
    var userInfo = mp.BLL.UserManager.GetUserInfo(image.User);
    <div class="waterfall-item-236">
        <a class="img">
            <img width="@imageInfo.ThumbFW236.Width" height="@imageInfo.ThumbFW236.Height" src="@imageInfo.ThumbFW236.Url" />
            <div class="cover"></div>
            <div class="actions clearfix">
                <div class="pull-left">
                    <div class="btn btn-primary btn-sm">转存</div>
                </div>
                <div class="pull-right">
                    <div class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-heart"></span>
                    </div>
                </div>
            </div>
        </a>
        <div class="description">@imageInfo.Description</div>
        <div class="info media">
            <div class="media-left">
                <a>
                    <img src="@userInfo.Head.NormalSize" />
                </a>
            </div>
            <div class="media-body">
                <div class="line">
                    <a href="~/user/@image.UserID">@image.User.Name</a>收集到
                </div>
                <div class="line"><a href="~/package/@image.PackageID">@image.Package.Title</a></div>
            </div>
        </div>
    </div>

}