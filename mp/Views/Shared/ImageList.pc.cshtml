@model IEnumerable<mp.BLL.ImageInfo>

@foreach (var image in Model)
{
    <div class="waterfall-item-236" data-id="@image.ID">
        <a class="img">
            <img width="@image.ThumbFW236.Width" height="@image.ThumbFW236.Height" src="@image.ThumbFW236.Url" />
            <div class="cover"></div>
            <div class="actions clearfix">
                <div class="pull-left">
                    <div class="btn btn-primary btn-sm">转存</div>
                </div>
                <div class="pull-right">
                    <div class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-heart"></span>
                    </div>
                </div>
            </div>
        </a>
        <div class="description">@image.Description</div>
        <div class="info media">
            <div class="media-left">
                <a>
                    <img src="@image.User.Head" />
                </a>
            </div>
            <div class="media-body">
                <div class="line">
                    <a href="@image.User.HomePage">@image.User.Name</a>收集到
                </div>
                <div class="line"><a href="@image.Package.HomePage">@image.Package.Title</a></div>
            </div>
        </div>
    </div>
}
@if (Model.Count() != 0)
{
    <div class="waterfall-item-236 more"></div>
}