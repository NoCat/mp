@model IEnumerable<mp.Models.WaterfallItem>

@foreach (var item in Model)
{
    var user = item.Item as mp.Models.UserInfo;
    
    <div class="waterfall-item fw236" data-id="@item.ID">
        <a class="avt">
            <img src="@user.BigHead" />
        </a>
        <div class="title text-center">
            @user.Name
        </div>
        <div class="attr text-center">
            @(user.ImageCount)张图片  @(user.FollowerCount)人关注
        </div>
    </div>
}

@if (Model.Count() != 0)
{
    <div class="waterfall-item more"></div>
}