@{
    Layout = "~/Views/Shared/BootstrapLayout.cshtml";
}

@section style{
    @System.Web.Optimization.Styles.Render("~/css/mp.css")
}

@section script{    
    @System.Web.Optimization.Scripts.Render("~/js/mp.js")
}
@RenderPage("~/Views/Shared/header.pc.cshtml")

@RenderBody()

<div id="modal" class="modal">
    <div id="login-modal" class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">登录</h4>
            </div>
            <div class="modal-body">
                <div class="bg-warning text-center text-warning">密码或用户名错误</div>
                <input class="form-control" id="login-email" type="text" placeholder="邮箱" />
                <input class="form-control" id="login-password" type="password" placeholder="密码" />
                <div class="form-group">
                    <input type="checkbox" id="login-remember" />
                    <label for="login-remember">记住我</label>
                </div>
                <button type="button" id="login-submit" class="submit btn btn-primary btn-block center-block">登录</button>
                <div class="signup">
                    <a>没有帐号?立即注册</a>
                </div>
            </div>
        </div>
    </div>

    <div id="message-modal" class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">消息</h4>
            </div>
            <div class="modal-body">
                <span id="message-text"></span>
            </div>
        </div>
    </div>

    <div id="signup-modal" class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">注册</h4>
            </div>
            <div class="modal-body">
                <input class="form-control" type="text" placeholder="注册邮箱" />
                <button type="button" id="signup-submit" class="btn btn-primary btn-block center-block">注册</button>
            </div>
        </div>
    </div>

    <div id="resave-modal" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">转存</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col col-xs-5">
                            <img src="http://img.miaopass.net/efb9fe7148072703745ddcd379cc3077_fw236.jpg" />
                        </div>
                        <div class="col col-xs-7 ">
                            <div class="btn-group btn-block">
                                <button type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    当前图包 <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" style="width:100%">
                                    <li role="separator" class="divider"></li>
                                    <li><input class="form-control input-sm" type="text" /></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>