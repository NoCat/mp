@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "后台用户管理";
    Layout = "~/Views/Shared/dashboardMaster.cshtml";
    var list = ViewBag.List;
}

<h2 class="page-header">后台用户管理</h2>
<div class="placeholder clearfix">
    <div class="col-xs-2 pull-right">
        <form>
            <div class="input-group input-group-sm">
                <input type="text" name="find" class="form-control" placeholder="输入用户名搜索...">
                <span class="input-group-btn">
                    <button class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                </span>
            </div>
        </form>
    </div>
    <button class="btn btn-primary pull-right btn-sm" data-toggle="modal" data-target="#create"><span class="glyphicon glyphicon-plus"></span>新增</button>
</div>

<table class="table table-table-striped">
    <tr>
        <th>ID</th>
        <th>用户名</th>
        <th>操作</th>
    </tr>
    @foreach (mp.Admin.Models.AdminUserInfo item in list)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>
                <div class="row">
                    <a href="@Url.Action("Delete", new {id=item.ID})" class="col-xs-2 btn btn-xs btn-danger confirm"><span class="glyphicon glyphicon-trash"></span>删除</a>
                </div>
            </td>
        </tr>
    }
</table>


@Html.PagedListPager((IPagedList)list, page => Url.Action("index", new { page }))

<div class="modal fade" id="create">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-horizontal" method="post" action="@Url.Action("create")">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">新建后台用户</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-xs-4">用户名：</label>
                        <div class="col-xs-8"><input type="text" name="name" class="form-control" /></div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-4">密码：</label>
                        <div class="col-xs-8"><input type="password" name="password" class="form-control" /></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">确定</button>
                </div>
            </form>
        </div>
    </div>
</div>